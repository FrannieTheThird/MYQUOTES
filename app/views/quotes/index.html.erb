<p id="notice"><%= notice %></p>

<h1 class="w3-blue" style="text-shadow:1px 1px 0 #444">Quotes</h1>

<table class="w3-table-all w3-hoverable">
  <thead>
    <tr>
      <th class="w3-blue" style="text-shadow:1px 1px 0 #444">Author</th>
      <th class="w3-blue" style="text-shadow:1px 1px 0 #444">Quotation</th>
      <th class="w3-blue" style="text-shadow:1px 1px 0 #444">Source</th>
      <th colspan="3" class="w3-blue" style="text-shadow:1px 1px 0 #444"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.author %></td>
        <td><%= quote.quotation %></td>
        <td><%= quote.source %></td>
        <td><%= link_to 'Show', quote , class:"w3-btn w3-round w3-blue-grey"%></td>
        <td><%= link_to 'Edit', edit_quote_path(quote), class:"w3-btn w3-round w3-blue-grey"%></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'ARE YOU S U R E?!' } , class:"w3-btn w3-round w3-blue-grey"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path , class:"w3-btn w3-round w3-blue-grey"%>
